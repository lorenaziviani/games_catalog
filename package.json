{
  "name": "games_catalog",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "preview": "vite preview",
    "prepare": "husky",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "jest --maxWorker=50% --coverage=false",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:playwright": "playwright test --headed --config=playwright.config.ts --project=chromium",
    "test:playwright:helper": "npx playwright codegen http://localhost:3000",
    "test:all": "./scripts/test-all.sh",
    "test:ci": "npm run lint && npm run test:coverage && npm run build",
    "storybook:update-titles": "node scripts/update-storybook-titles.cjs",
    "security:audit": "npm audit --audit-level=moderate",
    "security:outdated": "npm outdated"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,html,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.8.2",
    "@tanstack/react-query": "^5.83.0",
    "@tanstack/react-query-devtools": "^5.84.2",
    "logrocket": "^10.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.7.1",
    "vite-plugin-svgr": "^4.3.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@chromatic-com/storybook": "^4.0.1",
    "@eslint/js": "^9.32.0",
    "@playwright/test": "^1.54.1",
    "@storybook/addon-a11y": "^9.0.18",
    "@storybook/addon-docs": "^9.0.18",
    "@storybook/addon-themes": "^9.0.18",
    "@storybook/react-vite": "^9.0.18",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/jquery": "^3.5.32",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/react-router-hash-link": "^2.4.9",
    "@types/styled-components": "^5.1.34",
    "@vitejs/plugin-react": "^4.6.0",
    "babel-plugin-styled-components": "^2.1.4",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-regexp": "^2.9.0",
    "eslint-plugin-storybook": "^9.0.18",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jest-junit": "^16.0.0",
    "jest-styled-components": "^7.2.0",
    "lint-staged": "^16.1.2",
    "playwright": "^1.54.1",
    "prettier": "^3.6.2",
    "storybook": "^9.0.18",
    "styled-components": "^6.1.19",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  }
}
